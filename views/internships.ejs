<%- include('./includes/nav.ejs') %>
    <div class="main-content-container container-fluid px-4">
        <div class="page-header row no-gutters py-4">
            <div class="col-12 col-sm-4 text-center text-sm-left mb-0">
                <h3 class="page-title">Webinars</h3>
            </div>
        </div>
        <!-- End Page Header -->
        <div class="row">
            <% if(webinars.length > 0) { %>
                <% webinars.forEach(w => { %>
                    <div class="col-lg-3 col-md-6 col-sm-12 mb-4" onclick="location.replace('/admin/view-internship/<%= w._id %>')">
                        <div class="card card-small card-post card-post--1">
                            <div class="card-post__image" style="background-image: url('/<%= w.companyLogo %>');">
                                <a href="/admin/edit-internship/<%= w._id %>" class="card-post__category badge badge-pill badge-dark">Edit</a>
                            </div>
                            <div class="card-body">
                                <h5 class="card-title">
                                    <a class="text-fiord-blue" href="#">
                                        <%= w.profile %> -
                                            <%= w.stipend %>
                                    </a>
                                </h5>
                                <p class="card-text d-inline-block mb-3 cut-text">
                                    <%= w.description %>
                                </p>
                                <div>
                                    <span class="text-muted"><%= w.startDisplayDate %> - <%= w.duration %></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <% }) %>
                        <% } else {%>
                            <h2>No internships hosted</h2>
                            <% } %>
        </div>
    </div>
    <script>
        window.onload = function() {
            const x = document.querySelectorAll('.cut-text');
            x.forEach(e => {
                if (e.textContent.length >= 80) {
                    e.innerHTML = e.textContent.substring(0, 80) + '...';
                }
            })
        }
    </script>
    <%- include('./includes/foot.ejs') %>